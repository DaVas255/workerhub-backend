generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  OPEN
  ACCEPTED
  COMPLETED
}
model Task{
  id          Int         @default(autoincrement()) @id
  title       String
  content     String
  status      TaskStatus  @default(OPEN)
  price       Int
  date        DateTime
  customer    User        @relation(fields: [customerId], references: [id])
  customerId  Int
}

model User{
  id          Int     @default(autoincrement()) @id
  name        String
  email       String  @unique
  password    String
  phoneNumber String  @unique
  tasks       Task[]
}